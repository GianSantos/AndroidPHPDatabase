<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/most_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Post with most likes" />

    <Button
        android:id="@+id/most_followers"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="79dp"
        android:text="User with most followers" />

    <TextView
        android:id="@+id/likes_view"
        android:layout_width="189dp"
        android:layout_height="51dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/most_likes" />

    <TextView
        android:id="@+id/followers_view"
        android:layout_width="185dp"
        android:layout_height="54dp"
        android:layout_alignTop="@+id/most_followers"
        android:layout_toEndOf="@+id/most_likes" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="316dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>